<?xml version="1.0" encoding="utf-8"?>

<!--
    Root layout for the Status fragment.
    Displays real-time light sensor information
    centered vertically on the screen.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <!--
        Title text indicating the purpose of this screen.
    -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Light Sensor Status"
        android:textSize="22sp"
        android:gravity="center" />

    <!--
        Horizontal ProgressBar that visually represents
        the current light intensity value.
    -->
    <ProgressBar
        android:id="@+id/lightProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="300"
        android:layout_marginTop="20dp" />

    <!--
        TextView that displays the current light level
        in lux, updated dynamically from sensor data.
    -->
    <TextView
        android:id="@+id/tvLuxValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0 Lux"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="10dp"/>

</LinearLayout>
